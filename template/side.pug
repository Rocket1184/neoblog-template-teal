aside
    each group in side
        .side-box
            if group.preset == 'tags'
                .side-box-header
                    span #{group.name || 'Tags'}
                each articles, tag in state.tags
                    if articles.length > 0
                        .side-box-item
                            a.side-box-item__inner(href=`/tag/${tag}`) #{tag} (#{articles.length})
            else
                .side-box-header
                    span #{group.name}
                each item in group.items
                    .side-box-item
                        if item.text
                            - var tag = item.tag || 'span'
                            if item.attr && item.attr.href
                                - tag = 'a'
                            #{tag}.side-box-item__inner&attributes(item.attr) #{item.text}
                        else
                            !={item}