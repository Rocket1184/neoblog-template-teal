doctype html
html(lang= lang || 'en')
    head
        block head
            meta(http-equiv="X-UA-Compatible", content="ie=edge")
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
            if head.meta
                each m in head.meta
                    meta&attributes(m)
            if article && article.meta && article.meta.title
                title #{article.meta.title} | #{config.title}
            else
                title #{config.title}
            link(rel="stylesheet", href=assets('style.css'))
            link(rel="stylesheet", href=assets('highlight.css'))
            if head.link
                each l in head.link
                    link&attributes(l)
            if head.script
                each s in head.script
                    script&attributes(s)
    body
        block nav
            include nav
        .content
            main
                block content
            block side
                include side
        if footer
            block footer
                include footer